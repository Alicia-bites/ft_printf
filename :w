#include "ft_printf.h"

int	ft_nb_under_0(int nb)
{
	int	len;

	len = 0;
	ft_putchar('-');
	nb *= -1;
	len++;
	return (len);
}

int	ft_print_d(int nb)
{
	int	len;

	len = 0;
	if (nb == -2147483648)
	{
		write(1, "-2147483648", 11);
		len = 11;
		return (len);
	}
	if (nb < 0)
		len = ft_nb_under_0;
	if (nb > 9)
	{
		len += ft_print_d(nb / 10);
		len += ft_print_d(nb % 10);
	}
	else
	{
		ft_putchar(nb + '0');
		len++;
	}
	return (len);
}
